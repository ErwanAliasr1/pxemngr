import os

from pxe.models import *
from pxe.common import *

for s in System.objects.all():
    l = Log.objects.filter(system=s).order_by('-date')
    if len(l) > 0:
        set_next_boot(l[0].system, l[0].boot_name.name)
    else:
        print 'no boot defined for', s.name

